<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>dei.uc.pt.aor.paj</groupId>
		<artifactId>proj4Maven</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>
	<artifactId>proj4ear</artifactId>
	<packaging>ear</packaging>

	<dependencies>
		<dependency>
			<groupId>dei.uc.pt.aor.paj</groupId>
			<artifactId>proj4web</artifactId>
			<version>${project.version}</version>
			<type>war</type>
		</dependency>

		<dependency>
			<groupId>dei.uc.pt.aor.paj</groupId>
			<artifactId>proj4ejb</artifactId>
			<version>${project.version}</version>
			<type>ejb</type>
		</dependency>
	</dependencies>

	<build>
		<finalName>firstear</finalName>
		<plugins>
			<!--Ear plugin -creating the ear - watch out skinny WARS! -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<configuration>
					<finalName>firstear</finalName>
					<defaultJavaBundleDir>lib/</defaultJavaBundleDir>
					<skinnyWars>true</skinnyWars>
					<modules>
						<webModule>
							<groupId>dei.uc.pt.aor.paj</groupId>
							<artifactId>proj4web</artifactId>
						</webModule>
						<ejbModule>
							<groupId>dei.uc.pt.aor.paj</groupId>
							<artifactId>proj4ejb</artifactId>
						</ejbModule>
					</modules>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.wildfly.plugins</groupId>
				<artifactId>wildfly-maven-plugin</artifactId>
				<configuration>
					<skip>false</skip>
					<filename>firstear.ear</filename>
				</configuration>
			</plugin>

			<!-- <plugin> <groupId>org.wildfly.plugins</groupId> <artifactId>wildfly-maven-plugin</artifactId> 
				<configuration> <jboss-home>${wildfly-server-home}/wildfly-${wildfly-version}</jboss-home> 
				<ignoreMissingDeployment>true</ignoreMissingDeployment> </configuration> 
				<executions> <execution> <id>DEPLOY TO WILDFLY</id> <phase>install</phase> 
				<goals> <goal>undeploy</goal> <goal>deploy</goal> </goals> </execution> </executions> 
				</plugin> -->
		</plugins>
	</build>
</project>